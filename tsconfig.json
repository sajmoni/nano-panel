{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"]
}
