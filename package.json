{
  "name": "nano-panel",
  "license": "MIT",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "test": "ava",
    "plop": "plop",
    "release": "yarn clean && yarn audit && yarn build && np --no-tests",
    "clean": "rm -f nano-panel.tgz",
    "qa": "yarn tsc && yarn xo --fix",
    "go": "./build-test.sh"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "browser"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "5.0.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "np": "6.2.5",
    "plop": "2.7.1",
    "rollup": "2.18.1",
    "typescript": "3.9.5",
    "xo": "0.32.0"
  }
}
