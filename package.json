{
  "name": "nano-panel",
  "license": "MIT",
  "version": "0.0.2",
  "description": "",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "test": "ava",
    "plop": "plop",
    "release": "yarn clean && yarn audit && yarn build && np --no-tests",
    "clean": "rm -f nano-panel.tgz",
    "qa": "yarn tsc && yarn xo --fix",
    "go": "./build-test.sh"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "browser"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "6.0.0",
    "@types/react": "16.9.53",
    "@types/react-dom": "16.9.9",
    "@types/styled-components": "5.1.4",
    "eslint-config-xo-typescript": "0.35.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.2",
    "np": "6.5.0",
    "plop": "2.7.4",
    "rollup": "2.32.1",
    "typescript": "4.0.3",
    "xo": "0.34.1"
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.0"
  }
}
