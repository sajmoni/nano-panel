{
  "name": "nano-panel",
  "license": "MIT",
  "version": "0.1.2",
  "description": "",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "go": "npm run build && preview && ava",
    "app": "npm run build && preview && cd app && npm run dev",
    "release": "npm run build && np --no-tests",
    "test": "ava",
    "qa": "tsc && xo --fix"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/nano-panel.git"
  },
  "files": [
    "dist/"
  ],
  "ava": {
    "require": [
      "esbuild-runner/register"
    ],
    "extensions": [
      "ts"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "devDependencies": {
    "@types/styled-components": "5.1.25",
    "ava": "4.3.0",
    "esbuild-runner": "2.2.1",
    "np": "7.6.2",
    "package-preview": "4.0.0",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "styled-components": "5.3.5",
    "typed-ls": "0.1.0"
  },
  "peerDependencies": {
    "react": "17.x",
    "react-dom": "17.x"
  }
}
